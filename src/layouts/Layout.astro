---
import HeaderNav from "../components/HeaderNav.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <main class="mx-auto w-full p-0">
      <header class="grid w-full grid-cols-12 items-center px-8 pt-4 pb-4">
        <h1 class="col-span-3 text-left text-2xl font-bold">{title}</h1>
        <HeaderNav class="col-span-6" />
        <div class="col-span-3 flex justify-end">
          <img src="/lorasuib/UIB.png" alt="UIB Logo" class="h-12" />
        </div>
      </header>
      <slot />
    </main>
  </body>
</html>
