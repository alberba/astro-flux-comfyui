---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <main class="w-full mx-auto p-0">
      <header class="grid grid-cols-3 items-center w-full px-8 pt-4 pb-4">
        <h1 class="text-3xl font-bold text-left">{title}</h1>
        <nav>
          <div class="flex space-x-4 justify-center overflow-x-auto no-scrollbar whitespace-nowrap">
            <a href="/" class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap" style="{Astro.url.pathname === '/' ? 'background: white; border-bottom: 2px solid #3b82f6;' : ''}">Generación de imágenes</a>
            <a href="/inpaint-loras" class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap" style="{Astro.url.pathname === '/inpaint-loras' ? 'background: white; border-bottom: 2px solid #3b82f6;' : ''}">Inpaint con Loras</a>
            <a href="/inpaint" class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap" style="{Astro.url.pathname === '/inpaint' ? 'background: white; border-bottom: 2px solid #3b82f6;' : ''}">Otro Inpaint</a>
          </div>
        </nav>
        <div></div>
      </header>
      <slot />
    </main>
  </body>
</html> 