---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <main class="w-full mx-auto p-0">
      <header class="grid grid-cols-12 items-center w-full px-8 pt-4 pb-4">
        <h1 class="text-2xl font-bold text-left col-span-3">{title}</h1>
        <nav class="col-span-6 flex justify-center">
          <div class="flex justify-center whitespace-nowrap">
            <a
              href="/lorasuib/"
              class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap {Astro.url.pathname === '/' ? 'active-tab' : ''}"
              >Generación de imágenes</a
            >
            <a
              href="/lorasuib/inpaint-loras"
              class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap {Astro.url.pathname === '/inpaint-loras' ? 'active-tab' : ''}"
              >Inpaint con Loras</a
            >
            <a
              href="/lorasuib/inpaint"
              class="tab-link px-4 py-2 rounded-t-lg font-semibold text-gray-700 hover:bg-indigo-100 whitespace-nowrap {Astro.url.pathname === '/inpaint' ? 'active-tab' : ''}"
              >Otro Inpaint</a
            >
          </div>
        </nav>
        <div class="col-span-3 flex justify-end">
          <img src="UIB.png" alt="UIB Logo" class="h-12" />
        </div>
      </header>
      <slot />
    </main>
  </body>
</html>
